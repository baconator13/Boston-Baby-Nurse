<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/PrimaryBackgroundColor">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Educational resources placeholder material" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sleep_text"
            android:textColor="@color/PrimaryTextColor"
            android:text="Sleeping"
            android:textSize="24sp"
            android:gravity="center"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:id="@+id/sleep_image"
            android:layout_below="@+id/sleep_text"
            android:layout_centerHorizontal="true"
            android:src="@drawable/sleeping_baby"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sleep_image"
            android:textColor="@color/PrimaryTextColor"
            android:id="@+id/feeding_text"
            android:text="Feeding"
            android:textSize="24sp"
            android:gravity="center" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:id="@+id/feed_image"
            android:layout_below="@+id/feeding_text"
            android:layout_centerHorizontal="true"
            android:src="@drawable/eating_baby"/>


    </RelativeLayout>

    </LinearLayout>


    <!-- The navigation drawer -->
    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:id="@+id/drawerPane"
        android:layout_gravity="start">

        <!-- Profile Box -->
        <RelativeLayout
            android:id="@+id/profileBox"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/md_white_1000"
            android:padding="8dp" >

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:paddingTop="20dp"
                android:src="@drawable/bbn_logo"
                android:layout_marginTop="5dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/avatar"
                android:orientation="vertical"
                android:background="@color/md_white_1000">

                <TextView
                    android:id="@+id/mainTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:text="Boston Baby Nurse"
                    android:textColor="@color/PrimaryTextColor"
                    android:textSize="20sp"
                    android:textStyle="bold" />


            </LinearLayout>
        </RelativeLayout>

        <!-- List of Actions (pages) -->
        <ListView
            android:id="@+id/navList"
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/profileBox"
            android:choiceMode="singleChoice"
            android:background="#ffffffff" />

    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>
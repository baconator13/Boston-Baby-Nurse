<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/md_cyan_700</item>
        <item name="colorPrimaryDark">@color/md_cyan_800</item>

    </style>

    <style name="ActionBar" >
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
        <item name="colorPrimary">@color/md_cyan_700</item>
        <item name="colorPrimaryDark">@color/md_cyan_800</item>


    </style>

    <style name="Theme.Base" parent="AppTheme">
        <item name="colorPrimary">@color/md_cyan_500</item>
        <item name="colorPrimaryDark">@color/md_cyan_700</item>
        <item name="colorAccent">@color/ColorBackgroundAccent</item>
        <item name="android:windowBackground">@color/md_white_1000</item>
    </style>

    <style name="Theme.BostonBabyNurse" parent="Theme.Base" />

    <style name="ActionBarThemeOverlay" parent="AppTheme">
        <item name="android:textColorPrimary">@color/PrimaryTextColor</item>
        <item name="colorControlHighlight">@color/md_cyan_700</item>
        <item name="colorPrimaryDark">@color/md_cyan_700</item>
        <item name="android:actionMenuTextColor">@color/PrimaryTextColor</item>
        <item name="android:textColorSecondary">@color/md_white_1000</item>
    </style>

    <style name="ActionBar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:textSize">18sp</item>
    </style>



</resources>
